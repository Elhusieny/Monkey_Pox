<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.Apply_as_a_doctor" android:tag="layout/fragment_apply_as_a_doctor_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView

                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/top" />

            <LinearLayout

                android:layout_marginTop="140dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="@string/home"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/heade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/ic_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"

                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_home" />

                    <TextView
                        android:id="@+id/HomeClick"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@id/ic_home"
                        android:text="@string/homeClicker"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ic_arrowRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/HomeClick"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/ApplyAsadoctorClick"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/ic_arrowRight"
                        android:text="@string/contact_us_clicker"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp"
                android:text="NAME AND SURNAME*" />

            <EditText
                android:id="@+id/DrName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="(e.g Dr Daniel Franke)"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#1976D2"
                android:autofillHints="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DrName"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="GENDER" />

            <Spinner
                android:id="@+id/sp_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginHorizontal="10dp"
                android:entries="@array/Gender"
                android:minHeight="48dp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="COUNTRY"
                android:layout_below="@id/sp_Gender"/>

            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="(e.g Egypt)"
                android:minHeight="48dp"
                android:entries="@array/country_names"
                android:textColorHint="#1976D2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="Email"
                android:layout_below="@id/country"/>

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="(e.g Ahmed@gmail.com)"
                android:minHeight="48dp"
                android:textColorHint="#1976D2" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="GOVERNORATE"
                android:layout_below="@id/Email"/>


            <EditText
                android:id="@+id/Governorate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="(e.g Cairo)"
                android:minHeight="48dp"
                android:textColorHint="#1976D2" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="Short Biography English For Display On Your Page"
                android:layout_below="@id/Governorate"/>

            <EditText
                android:id="@+id/shortreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="Short Biography About You"
                android:minHeight="48dp"
                android:textColorHint="#1976D2" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="Kindly Upload Personal Image"
                android:layout_below="@id/shortreview"/>
            <ImageView
                android:id="@+id/selectImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:text="Select"
                android:layout_marginHorizontal="10dp"

                android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
                android:layout_below="@id/textView7"/>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="Kindly Upload Your Medical Sendicate Card"
                android:layout_below="@id/selectImg"/>
            <ImageView
                android:id="@+id/imagemedicalsyndicate"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:text="Select"
                android:layout_marginHorizontal="10dp"
                android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
                android:layout_below="@id/textView8"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:text="Highest Certificate"
                android:layout_below="@id/imagemedicalsyndicate"/>


            <EditText
                android:id="@+id/selectCertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_marginHorizontal="10dp"
                android:entries="@array/country_names"
                android:minHeight="48dp" />
            <EditText
                android:id="@+id/syndicate_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectCertificate"
                android:layout_marginHorizontal="10dp"
                android:entries="@array/country_names"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/syndicate_number"


                android:layout_centerHorizontal="true"


                android:layout_marginTop="26dp"
                android:layout_marginBottom="15dp"

                android:backgroundTint="@color/blue_dark"
                android:onClick="LoginNow"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />


        </RelativeLayout>

    </LinearLayout>
         